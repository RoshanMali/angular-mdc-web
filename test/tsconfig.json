{
  "compilerOptions": {
    "declaration": false,
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib":[
      "es2017",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["../node_modules/@types"],
    "types": [
      "jasmine",
      "node"
    ],
    "rootDirs": [
      "./packages",
      "./test"
    ],
    "baseUrl": ".",
    "paths": {
      "@angular-mdc/web/*": ["../packages/*"],
      "@angular-mdc/web": ["../packages/public-api.ts"]
    }
  }
}
